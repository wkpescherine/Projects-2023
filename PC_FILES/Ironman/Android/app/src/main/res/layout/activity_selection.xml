<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/logoHeader"
        android:src="@drawable/nfllogo"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fantasy Ironman Tournament Live"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fantasy Ironman Tournament CPU"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ironman Tournament Live"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ironman Tournament CPU"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Real Ironman Tournament Live"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Real Ironman Tournament CPU"
        android:layout_margin="3dp"
        android:onClick="clickMarketplace"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:onClick="clickDashboard"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>